<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionOverflowButtonStyle">@style/WhiteToolbarIconStyle</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/white</item>
    </style>

    <style name="HomeToolbar_TextView_Light">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="HomeToolbar_TextView_Dark">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewStyle_18sp_black">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextViewStyle_18sp_black_marquee">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxEms">9</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
    </style>

    <style name="TextViewStyle_14sp_black_marquee">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxEms">9</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
    </style>

    <style name="TextViewStyle_16sp_black_marquee">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxEms">9</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
    </style>

    <style name="MusicPlayFragment_Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:maxEms">9</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>

    <style name="TextViewStyle_14sp_marquee">
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxEms">9</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="TextViewStyle_12sp_marquee">
        <item name="android:textSize">12sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxEms">9</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="TextViewStyle_10sp_marquee">
        <item name="android:textSize">10sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxEms">9</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="TextViewStyle_big_big_title" parent="MediumFont">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CardViewStyle">
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_marginStart">3dp</item>
        <item name="android:layout_marginEnd">3dp</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="TabLayoutStyle">
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="tabTextColor">@color/grey</item>
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="tabBackground">@color/white</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">scrollable</item>
    </style>

    <style name="TabLayoutTransparentStyle">
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextColor">@color/grey</item>
        <item name="tabIndicatorColor">@android:color/transparent</item>
        <item name="tabBackground">@android:color/transparent</item>
        <item name="tabGravity">center</item>
        <item name="tabMode">fixed</item>
        <item name="tabMinWidth">135dp</item>
    </style>

    <style name="MediumFont">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="LightFont">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ToolbarTheme" parent="Widget.AppCompat.Toolbar">
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>
    </style>

    <style name="WhiteToolbarIconStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/white</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <style name="MyEditText">
        <item name="android:colorAccent">@color/colorPrimary</item>
    </style>

    <style name="SaveMusicInfoDialog" parent="AppTheme">
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:gravity">center</item>
        <item name="android:windowFrame">@null</item>
    </style>

    <style name="SaveSongListDialog" parent="AppTheme">
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:gravity">center</item>
        <item name="android:windowFrame">@null</item>
    </style>

    <style name="PlayHistoryDialogStyle" parent="@android:style/Theme.Panel">
        <item name="android:windowAnimationStyle">@style/PlayHistoryDialog</item>
    </style>

    <style name="PlayHistoryDialog" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/anim_alpha_translate_from_bottom_show</item>
        <item name="android:windowExitAnimation">@anim/anim_alpha_translate_to_bottom_hide</item>
    </style>

</resources>
