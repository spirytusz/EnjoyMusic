<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/notification_music_cover"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:background="@color/grey"/>

    <TextView
        android:id="@+id/notification_music_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Music Name"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/notification_music_cover"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/notification_music_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Music Artist"
        android:textSize="12sp"
        android:layout_toRightOf="@+id/notification_music_cover"
        android:layout_below="@+id/notification_music_name"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="12dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_toRightOf="@+id/notification_music_cover"
        android:layout_below="@+id/notification_music_artist"
        android:layout_marginLeft="8dp"
        android:background="@color/grey"/>

</RelativeLayout>
